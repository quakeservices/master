#!/usr/bin/env bash

cd "$(git rev-parse --show-toplevel)" || exit

source scripts/include/build-env

echo "+++ Running shellcheck +++"

# shellcheck disable=SC2140
docker run --rm \
           --mount=type=bind,source="${PWD}",target="/mnt" \
           --workdir "${CODE_DIR}" \
           koalaman/shellcheck-alpine:latest sh -c "find /mnt/scripts -type f | xargs shellcheck"
