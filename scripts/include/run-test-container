#!/usr/bin/env bash
set -euxo pipefail

cd "$(git rev-parse --show-toplevel)" || exit 1

source scripts/include/build-env

CONTAINER_RUN_OPTIONS+=(
  ${MOUNT_SOCKET}
  ${MOUNT_PWD}
)

$CONTAINER_COMMAND run \
                   ${CONTAINER_RUN_OPTIONS[@]} \
                   "${APP_NAME}/test:latest" \
                   bash -c ${@:-bash}
