#!/usr/bin/env bash
set -eo pipefail

cd "$(git rev-parse --show-toplevel)" || exit
source scripts/include/build-env

COMMAND="
pytest -v
  --cov=lib/masterserver/
  --cov=lib/web-backend/
  --cov=lib/storage/
  test/unit/master
"

echo "+++ Running tests +++"
if [ -z $CI ]; then
  scripts/include/run-test-container $COMMAND
else
  $COMMAND
fi
